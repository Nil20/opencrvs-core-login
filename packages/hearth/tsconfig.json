{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@hearth/*": [
        "./*"
      ]
    },
    "target": "es6",
    "module": "commonjs",
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "build/dist",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "types": [
      "fhir",
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}
